import streamlit as st

st.set_page_config(page_title="PDM Utility Hub", layout="wide")

# Sidebar per la selezione dell'app
app_choice = st.sidebar.selectbox(
    "Select an App", ["Bundle Image Creator", "Image Download and Renaming"]
)

if app_choice == "Bundle Image Creator":
    from app_bundle import bundle_app
    bundle_app()
elif app_choice == "Image Download and Renaming":
    from renaming import renaming_app
    renaming_app()
